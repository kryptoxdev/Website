<%- include("../../partials/nav") %>
<%- include("../../partials/head") %>

<body>
	<div class="container h-100 d-flex justify-content-center align-items-center">
		<div class="container w-50 shadow p-3 mb-5 darker rounded text-white">
			<h2>Edit Game</h2>
			<form action="http://localhost:3000/edit/game/:id" method="post">
				<label for="name">Game Name</label> <br>
				<input class="userInput rounded" type="text" value="<%= game.name %>" name="name"> <br>
				<label for="duration">Duration</label> <br>
				<input class="userInput rounded" type="text" value="<%= game.duration %>" name="duration"> <br>
				<label for="size">Team Size</label> <br>
				<input class="userInput  rounded" type="text" value="<%= game.team_size %>" name="team_size"> <br>
				<input type="hidden" value="<%= game.game_id %>" name="game_id"> <br> 
				<button class="btn saveButton" type="submit">Save Changes</button>
				<a class="btn deleteButton" href="/games" role="button">Discard Changes</a>
			</form>
		</div>
	</div>
</body>
</html>