<%- include("../../partials/nav") %>
<%- include("../../partials/head") %>
<%- include("../../partials/gameValidation") %>

<body>
	<ol class="breadcrumb p-2">
		<li class="breadcrumb-item"><a class="breadcrumbPrevious" href="/">Home</a></li>
		<li class="breadcrumb-item"><a class="breadcrumbPrevious" href="/games">Games</a></li>
		<li class="breadcrumb-item breadcrumbCurrent">Edit '<%= game.name %>'</li>
	</ol>
	
	<div class="toast-container p-3 bottom-0 end-0">
		<div class="toast invisible bg-danger" id="alertBox">
			<div class="toast-body">
				<p class="m-0" id="alertText">text</p>
			</div>
		</div>
	</div>
	
	<div class="container h-100 d-flex justify-content-center align-items-center">
		<div class="container w-50 shadow p-3 mb-5 darker rounded text-white">
			<h2>Edit Game</h2>
			<form action="http://localhost:3000/edit/game/:id" onsubmit="return validateForm()" method="post">
				<label for="name">Game Name</label> <br>
				<input class="userInput rounded" type="text" value="<%= game.name %>" name="name" id="name"> <br>
				<label for="duration">Duration</label> <br>
				<input class="userInput rounded" type="text" value="<%= game.duration %>" name="duration" id="duration"> <br>
				<label for="size">Team Size</label> <br>
				<input class="userInput  rounded" type="text" value="<%= game.team_size %>" name="team_size" id="team_size"> <br>
				<input type="hidden" value="<%= game.game_id %>" name="game_id"> <br> 
				<button class="btn saveButton" type="submit">Save Changes</button>
				<a class="btn deleteButton" href="/games" role="button">Discard Changes</a>
			</form>
		</div>
	</div>
</body>
</html>