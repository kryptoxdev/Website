<%- include("../../partials/nav") %>
<%- include("../../partials/head") %>

<body>
	<ol class="breadcrumb p-2">
		<li class="breadcrumb-item"><a class="breadcrumbPrevious" href="/">Home</a></li>
		<li class="breadcrumb-item"><a class="breadcrumbPrevious" href="/games">Games</a></li>
		<li class="breadcrumb-item breadcrumbCurrent">Delete '<%= game.name %>'</li>
	</ol>
	
	<div class="container h-100 d-flex justify-content-center align-items-center" style="width: 600px;">
		<div class="container w-50 shadow p-3 mb-5 darker rounded">
			<form action="http://localhost:3000/delete/game/:id" method="post">
				<input name="game_id" value="<%= game.game_id %>" hidden> <br>
				<h2 class="text-center"><strong>Delete Game</strong></h1>
				<p>
					Name: <%= game.name %> <br>
					Duration: <%= game.duration %> <br>
					Team Size: <%= game.team_size %> <br>
					Game ID: <%= game.game_id %>
				</p>
				<p class="text-danger"><strong><sub>* This action is irreversible</sub></strong></p>
				<button class="btn btn-danger mt-3" style="width: 123px;" type="submit">Delete Game</button>
				<a class="btn btn-secondary mt-3" style="width: 123px;" href="/games" role="button">Go Back</a>
			</form>
		</div>
	</div>
</body>
</html>