<%- include("../../partials/nav") %>
<%- include("../../partials/head") %>
<%- include("../../partials/playerValidation") %>

<body>
	<ol class="breadcrumb p-2">
		<li class="breadcrumb-item"><a class="breadcrumbPrevious" href="/">Home</a></li>
		<li class="breadcrumb-item"><a class="breadcrumbPrevious" href="/players">Players</a></li>
		<li class="breadcrumb-item breadcrumbCurrent">Add Player</li>
	</ol>
	
	<div class="toast-container p-3 bottom-0 end-0">
		<div class="toast invisible bg-danger" id="alertBox">
			<div class="toast-body">
				<p class="m-0" id="alertText">text</p>
			</div>
		</div>
	</div>
	
	<div class="container h-100 d-flex justify-content-center align-items-center" style="width:600px;">
		<div class="container w-50 shadow p-3 mb-5 darker rounded text-white">
			<h2 class="text-center"><strong>Add Player</strong></h2>
			<form action="http://localhost:3000/add/player" onsubmit="return validateForm()" method="post">
				<label for="name">Player Name</label> </br>
				<input class="userInput rounded" style="width:250px;" type="text" name="name" id="name"> </br>
				<label for="email">Email</label> </br>
				<input class="userInput rounded" style="width:250px;" type="text" name="email" id="email"> </br>
				<button class="btn saveButton mt-3" style="width:123px;" type="submit">Add Player</button>
				<a class="btn deleteButton mt-3" style="width:123px;" href="/players" role="button">Discard</a>
			</form>
		</div>
	</div>
</body>
</html>